<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="../Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" media="all" />
    <!--//booststrap end-->
    <!-- font-awesome icons -->
    <link href="../Content/css/font-awesome.min.css" rel="stylesheet" />
    <!-- //font-awesome icons -->
    <!--stylesheets-->
    <link href="../Content/css/style.css" rel='stylesheet' type='text/css' media="all" />
    <!--//stylesheets-->
    <link href="//fonts.googleapis.com/css?family=Thasadith:400,700" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:400,600" rel="stylesheet" />


</head>
<body>

    <div class="main-top" id="home">
        <!-- header -->

        <div class="headder-top">
            <!-- nav -->
            <nav>
                <div id="logo">
                    <h1><a href="#">Fashion</a></h1>
                </div>
                <label for="drop" class="toggle">Menu</label>
                <input type="checkbox" id="drop">
                <ul class="menu mt-2">
                    <li class="active"><a>@Html.ActionLink("Home", "Index", "Home")</a></li>
                    <li class="mx-lg-3 mx-md-2 my-md-0 my-1"><a>@Html.ActionLink("About", "About", "Home")</a></li>
                    <li><a>@Html.ActionLink("Services", "Services", "Home")</a></li>

                    <li><a>@Html.ActionLink("Contact", "Contact", "Home")</a></li>
                    <li><a>@Html.ActionLink("Sign Up", "Registration", "Home")</a></li>
                    <li><a>@Html.ActionLink("Sign In", "Login", "Home")</a></li>
                </ul>
            </nav>
            <!-- //nav -->
        </div>
        <!-- //header -->
        <!-- banner -->
        <div class="main-banner">
            <div class="container">
                <div class="style-banner ">
                    <h4 class="mb-2">Fresh Style</h4>
                    <h5>
                        New Collection Arrivals
                    </h5>
                </div>
                <div class="two-demo-button mt-md-4 mt-3">
                    <p> </p>
                </div>
                <div class="view-buttn mt-md-4 mt-sm-4 mt-3">
                    <a href="#" class="btn">Read More</a>
                </div>
            </div>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <footer class="py-lg-4 py-md-3 py-sm-3 py-3">
        <div class="container py-lg-5 py-md-5 py-sm-4 py-3">
            <div class="footer-w3layouts-head text-center">
                <h2><a href="#">Fashion</a></h2>
            </div>
            <div class="social-icons mt-lg-5 mt-md-4 mt-3 text-center">
                <ul>
                    <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                    <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                    <li><a href="#"><span class="fa fa-rss"></span></a></li>
                    <li><a href="#"><span class="fa fa-envelope"></span></a></li>
                    <li><a href="#"><span class="fa fa-instagram"></span></a></li>
                </ul>
            </div>
            <div class="bottem-wthree-footer text-center pt-md-4 pt-3">
                <p>
                    © 2024 Fashion. All Rights Reserved | Developed by <a href="#" target="_blank">Jayesh Ahir</a>
                </p>
            </div>
            <!-- move icon -->
            <div class="text-center">
                <a href="#home" class="move-top text-center mt-3"><i class="fa fa-arrow-up" aria-hidden="true"></i></a>
            </div>
            <!--//move icon -->
        </div>
    </footer>

</body>
</html>
